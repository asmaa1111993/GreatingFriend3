<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.greatingfriend.MainActivity">

    <EditText
        android:id="@+id/freind_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="My freind please enter your name"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Check here your message"
        android:layout_below="@+id/freind_name_edit_text"
        android:textAllCaps="true"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/show_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Message"
        android:layout_below="@id/message_text_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="60dp"/>

</RelativeLayout>
